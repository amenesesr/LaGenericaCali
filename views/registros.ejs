<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute sticky-top">
  <img src="/cali/assets/img/header.png" class="img-fluid" alt="Tienda La Generica - Cali">
</nav>

<div class="content">
  <br>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-success">
            <h4 class="card-title "><b>Registro de Actividad en el Sistema</b></h4>
          </div>

          <div class="card-body">
    
            <div class="card" style="width: 25rem;">
              <div class="card-header card-header-success">
                Convenciones
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="badge bg-primary"> Azul </span> Informativo - No realiza ninguna accion <span class="badge bg-primary"> <%=contadorInformativo%> Registro(s) </span> </li>
                <li class="list-group-item"><span class="badge bg-success"> Verde </span> Realizo una accion con exito <span class="badge bg-success"> <%=contadorExitoso%> Registro(s) </span> </li>
                <li class="list-group-item"><span class="badge bg-danger"> Rojo </span> Realizo una accion fallida <span class="badge bg-danger"> <%=contadorFallido%> Registro(s) </span> </li>
                <li class="list-group-item">  </li>
              </ul>
              <div class="card-header card-header-success">
                <%=registros.length%> Registro(s) en total.
              </div>

            </div>

            <hr style="height:2px">
            <table id="tablaRegistros" data-order='[[ 0, "desc" ]]' data-page-length='11' class="display" style="text-align: center;">
              <thead>
                <tr>
                  <th scope="col">Fecha/hora</th>
                  <th scope="col">Usuario</th>
                  <th scope="col">Acci√≥n</th>
                </tr>
              </thead>
              <tbody>
                <%registros.forEach((registro) => {
                  if (registro.convencion_registros == 1)
                  {%>
                    <tr>
                      <td>
                        <p class="informativo"><%=registro.fechaHora_registros%></p>
                      </td>
                      <td>     
                        <p class="informativo"><%=registro.usuario_registros%></p>
                      </td>
                      <td>
                        <p class="informativo"><%=registro.accion_registros%></p>
                      </td>
                    </tr>
                  <%}
                  if (registro.convencion_registros == 2)
                  {%>
                    <tr>
                      <td>
                        <p class="exito"><%=registro.fechaHora_registros%></p>
                      </td>
                      <td>     
                        <p class="exito"><%=registro.usuario_registros%></p>
                      </td>
                      <td>
                        <p class="exito"><%=registro.accion_registros%></p>
                      </td>
                    </tr>
                  <%}
                  if (registro.convencion_registros == 3)
                  {%>
                    <tr>
                      <td>
                        <p class="fallo"><%=registro.fechaHora_registros%></p>
                      </td>
                      <td>     
                        <p class="fallo"><%=registro.usuario_registros%></p>
                      </td>
                      <td>
                        <p class="fallo"><%=registro.accion_registros%></p>
                      </td>
                    </tr>
                  <%}
                })%>
              </tbody>
              <tr> 
                <td colspan="3">
                  <a href='/cali/registros/limpiar' class="w-100 btn btn-success pull-right bi bi-trash"> Limpiar Datos</a>
                </td>
              </tr>
            </table>     
          </div>
        
        </div>
      </div>
    </div>
  </div>
</div>

  